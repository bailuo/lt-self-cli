#!/usr/bin/env node
require('shelljs/global');

const argv = require('yargs').argv;

const argvName = argv.name;

if (argvName) {
	const folderName = `./${argvName}`;
	rm('-rf', folderName);

	switch (argv.mode) {
		case 'react':
			exec(`create-react-app ${folderName}`);
			break;
		case 'vue':
			exec(`vue init webpack ${folderName}`);
			break;
		case 'init':
			// todo
			exec('echo create self cli');
			break;
		default:
			exec('echo default cli');
	}
} else {
	console.log('请输入文件名，如：lt-self-cli --name folderName');
	process.exit(0);
}



